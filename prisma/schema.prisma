generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model announcements {
  announcement_id Int      @id @default(autoincrement())
  title           String?  @db.VarChar(50)
  description     String?  @db.VarChar(200)
  posted_date     DateTime @db.DateTime(0)
  last_modified   DateTime @default(now()) @db.DateTime(0)
  event           events   @relation(fields: [event_id], references: [event_id])
  event_id        Int      @unique
}

model calendar {
  calendar_id Int      @id @default(autoincrement())
  date        DateTime @db.DateTime(0)
  start_time  String   @map("start_time") @db.VarChar(20)
  end_time    String   @map("end_time") @db.VarChar(20)
  facilitator String   @db.VarChar(45)
  room        String   @db.VarChar(20)
  stat        Int      @db.TinyInt
}

model users {
  email      String  @id @db.VarChar(50)
  first_name String  @db.VarChar(50)
  last_name  String  @db.VarChar(50)
  role       String  @db.VarChar(50)
  school     String  @db.VarChar(50)
  program    String  @db.VarChar(50)
  isActive   Boolean @default(true)
}

model faqs {
  faqs_id  Int    @id @default(autoincrement())
  question String @db.VarChar(200)
  answer   String @db.VarChar(200)
}

model events {
  event_id      Int            @id @default(autoincrement())
  announcement  announcements?
  location      locations      @relation(fields: [location_id], references: [location_id])
  location_id   Int            @unique
  start_time    DateTime       @db.DateTime(0)
  end_time      DateTime       @db.DateTime(0)
  summary       String?        @db.VarChar(200)
  description   String?        @db.VarChar(200)
  created       DateTime?      @db.DateTime(0)
  last_modified DateTime?      @default(now()) @db.DateTime(0)
  status        status?        @default(TENTATIVE)
}

enum status {
  CANCELLED
  CONFIRMED
  TENTATIVE
}

model locations {
  location_id Int      @id @default(autoincrement())
  room_number String   @db.VarChar(50)
  event       events[]
}
